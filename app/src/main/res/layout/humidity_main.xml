<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">


    <LinearLayout
        android:id="@+id/sampleL"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/sample1I"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/lighte"
                />
            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/sample1N"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="S 1"
                android:textSize="15sp"
                app:bootstrapBrand="primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/sample2I"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/lighte"
                />
            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/sample2N"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="S 2"
                android:textSize="15sp"
                app:bootstrapBrand="primary" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/sample3I"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/lighte"
                />
            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/sample3N"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="S 3"
                android:textSize="15sp"
                app:bootstrapBrand="primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/sample4I"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/lighte"
                />
            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/sample4N"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="S 4"
                android:textSize="15sp"
                app:bootstrapBrand="primary" />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
    android:layout_centerHorizontal="true"
    android:id="@+id/buttonL"
    android:layout_below="@+id/sampleL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="30dp"
    android:orientation="horizontal"
    >

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            app:bootstrapBrand="success"
            app:bootstrapSize="md"
            app:bootstrapText="start"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:bootstrapBrand="warning"
            app:bootstrapSize="md"
            app:bootstrapText="break"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false"
            />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            app:bootstrapBrand="danger"
            app:bootstrapSize="md"
            app:bootstrapText="stop"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false" />
    </LinearLayout>



    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/buttonL"
        android:id="@+id/message"
        android:text="@string/measure_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center" />

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/progressR"
        android:layout_below="@+id/message"
        android:layout_width="220dp"
        android:layout_height="220dp">


        <ProgressBar
            android:layout_centerHorizontal="true"
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminateBehavior="repeat"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/ring_rotate"
            android:indeterminateDuration="0"
            android:indeterminateOnly="true" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:id="@+id/showTime"
            android:text="@string/measure_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center" />
    </RelativeLayout>




    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_marginTop="15dp"
        android:layout_below="@+id/progressR"
        android:layout_centerHorizontal="true"
        android:id="@+id/minimize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:visibility="visible"
        app:bootstrapBrand="regular"
        app:bootstrapSize="md"
        app:bootstrapText="minimize"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false" />


</RelativeLayout>
