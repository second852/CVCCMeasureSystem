<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/measure_time"
            android:textColor="@color/bootstrap_brand_primary"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/minimize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/minimize" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/measureStatue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:layout_toLeftOf="@+id/showTime"
            android:background="@drawable/corners_model_black"
            android:src="@drawable/stop" />

        <TextView
            android:id="@+id/showTime"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/corners_model_gray"
            android:gravity="center"
            android:padding="3dp"
            android:text="00:00:00"
            android:textColor="@color/bootstrap_gray_light"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/setting" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/one_water"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/water_empty" />

        <TextView
            android:id="@+id/overTime2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/corners_model_gray"
            android:gravity="center"
            android:padding="3dp"
            android:text="00:00:00"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/two_water1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/water_empty" />

        <ImageView
            android:id="@+id/two_water2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/water_empty" />

        <TextView
            android:id="@+id/overTime1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/corners_model_gray"
            android:gravity="center"
            android:padding="3dp"
            android:text="00:00:00"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/three_water1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/water_empty" />

        <ImageView
            android:id="@+id/three_water2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/water_empty" />

        <ImageView
            android:id="@+id/three_water3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/water_empty" />

        <TextView
            android:id="@+id/overTime3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/corners_model_gray"
            android:gravity="center"
            android:padding="3dp"
            android:text="00:00:00"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/four_water1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/water_empty" />

        <ImageView
            android:id="@+id/four_water2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/water_empty" />

        <ImageView
            android:id="@+id/four_water3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/water_empty" />

        <ImageView
            android:id="@+id/four_water4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/water_empty" />

        <TextView
            android:id="@+id/overTime4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/corners_model_gray"
            android:gravity="center"
            android:padding="3dp"
            android:text="00:00:00"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sampleL"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/start"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/start_button_up"
            />
        <ImageView
            android:id="@+id/pause"
            android:layout_marginStart="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/break_button_up"
            />
        <ImageView
            android:id="@+id/stop"
            android:layout_marginStart="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#f5f5f5"
            android:src="@drawable/stop_button_up"
            />

    </LinearLayout>

</LinearLayout>
